<h1>Search for books</h1>

<%=	form_with(model: @search, local:	true)	do	|form|	%>

  <p>
    <%=	form.label :title %><br>
    <%=	form.text_field:title %>
  </p>

  <p>
    <%=	form.label :author %><br>
    <%=	form.text_field :author %>
  </p>

  <p>
    <%=	form.label :isbn %><br>
    <%=	form.text_field :isbn %>
  </p>

  <p>
    <%=	form.submit "Search"%>
  </p>

<% end %>


<%=	link_to 'Back',	welcome_index_path %>
